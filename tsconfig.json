{
  "compilerOptions": {
    "target": "es6",                                     
    "lib": [
      "dom",
      "dom.Iterable",
      "esnext"
      ],                                        
      "esModuleInterop": true,                             
      "module": "esnext",                                
      "moduleResolution": "node",                       
      "jsx": "react",                                
      "rootDir": "src",                                  
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },                                  
      "allowJs": true,                                                                 
      "allowSyntheticDefaultImports": true,             
      "strict": true,                                      
      "resolveJsonModule": true,                        
      "forceConsistentCasingInFileNames": true,                                      
      "noEmit": true,                                   
  },
  "include": [
    "src"
  ]
}
